<form  class="login-form" bindsubmit="loginSubmit">
  <view class="section">
    <input type="text" name="account" placeholder="请输入账号" value="{{account}}" bindinput='bindAccount' />
  </view>
  <view class="section">
    <input  type="password" name="password" placeholder="请输入密码" value="{{password}}" bindinput='bindPassword'/>
  </view>
  <view class="section">
    <button form-type='submit'>登录</button>
  </view>
</form>